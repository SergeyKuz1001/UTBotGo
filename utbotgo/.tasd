for .env:
    codeBlock: (?m)<statement>
    statement: <setterVar><+><MVN_setterVar><|><MVN_getterVar>
    setterVar: ^<fieldName>=<template>$
    template:  <*getterVar>.*
    getterVar: \$\{<fieldName>\}
    fieldName: (\w|_)+
    MVN_setterVar: <MVN_varName>\w*=
    MVN_getterVar: \$\{<MVN_varName>\w*\}
    MVN_varName:   <=template><=getterVar><=fieldName><MVN_result>__
    MVN_result:    <=result>\w+
for .gitignore:
    codeBlock: #\>\s+<template><result>
    template:  <*getterVar>.+\n
    getterVar: \{<fieldName>\}
    fieldName: \w+
    result:    ([^#\n].*\n)?
for *.mk:
    codeBlock: (?m)\$\(<template>\w*\)
    template:  <=getterVar><=fieldName><result>__
    result:    \w+
for *.md:
    codeBlock: (?s)\<!--\s*<leftPart><rightPart>\s*--\>
    leftPart:  <setterVar>|<adderVar>|()
    rightPart: (\[<template>(\|\s*--\><result>\<!--\s*)?\])|(<template>\s)
    template:  <*getterVar>.+?
    separator: .*?
    getterVar: (?s)(\{<varName>\})|(\{<template>\|<separator>\})
    setterVar: \$\s+<varName>\s*=\s*
    adderVar:  \$\s+<varName>\s*\+=\s*
    varName:   <*field>(\w|\.)+
    field:     \.?<maybeNewFieldName>
    maybeNewFieldName: \w+
    result:    .*?
